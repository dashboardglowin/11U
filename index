<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Baseball Lineup</title>
  <style>
    .player-button {
      width: 120px;
      height: 50px;
      margin: 5px;
      text-align: center;
      cursor: pointer;
    }

    .lineup-card {
      margin-top: 20px;
      border: none;
    }

    .baseball-diamond {
      margin-top: 20px;
      width: 300px;
      height: auto;
      display: block;
    }
  </style>
  <script>
    var positions = [
      "Pitcher", "Catcher", "1st Base", "2nd Base", "3rd Base",
      "Shortstop", "Left Field", "Center Field", "Right Field",
      "Bench 1", "Bench 2"
    ];

    var assignedPositions = {};

    function showLineupPopup(player) {
      // Logic for displaying the popup
      var availablePositions = positions.filter(pos => !assignedPositions[pos]);
      var popupMessage = `Assign ${player} to a position:\n${availablePositions.join(', ')}`;
      var selectedPosition = prompt(popupMessage);

      if (selectedPosition && availablePositions.includes(selectedPosition)) {
        assignedPositions[selectedPosition] = player;
        updateLineupCard();
      }
    }

    function updateLineupCard() {
      var lineupCard = document.getElementById("lineup-card");
      lineupCard.innerHTML = "<p><strong>Lineup Card:</strong></p>";

      positions.forEach(pos => {
        var playerName = assignedPositions[pos] || "Unassigned";
        lineupCard.innerHTML += `<p>${pos}: ${playerName}</p>`;
      });
    }

    function showBaseballDiamond() {
      // Logic for displaying the baseball diamond with assigned positions
      alert('Show baseball diamond with assigned positions.');
    }
  </script>
</head>
<body>

  <div>
    <!-- Player Buttons -->
    <div>
      <button class="player-button" onclick="showLineupPopup('Matthew')">Matthew</button>
      <button class="player-button" onclick="showLineupPopup('Benjamin')">Benjamin</button>
      <button class="player-button" onclick="showLineupPopup('Jacob')">Jacob</button>
      <!-- Add buttons for other players -->
    </div>

    <!-- Lineup Card -->
    <div id="lineup-card" class="lineup-card">
      <!-- Lineup card will be dynamically updated -->
    </div>
  </div>

  <!-- Baseball Diamond -->
  <div>
    <img class="baseball-diamond" src="https://static.vecteezy.com/system/resources/previews/001/198/300/large_2x/baseball-diamond-png.png" alt="Baseball Diamond">
  </div>

  <!-- Button to show final display -->
  <button onclick="showBaseballDiamond()">Show Final Display</button>

</body>
</html>
